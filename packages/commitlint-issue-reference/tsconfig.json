{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Basic Options */

    // ES2020 should be safe to use in browsers
    "target": "ES2020",
    // Required for ESM mode
    "module": "NodeNext",
    // Specify library files to be included in the compilation.
    "lib": ["DOM", "ESNext"],

    // Explicitly specify libraries that should load types in the global scope.
    // This is useful if there are libraries in the devDependencies that have
    // conflicts or are not used at all.
    // "types": [],

    /* Strict Type-Checking Options */

    // Enable all strict type-checking options.
    "strict": true,
    // Include 'undefined' in index signature results.
    "noUncheckedIndexedAccess": true,

    /* Module Resolution Options */

    // Required for ESM mode, forces the .js extension for local imports.
    "moduleResolution": "NodeNext",
    // Allow default imports from modules with no default export.
    // This does not affect code emit, just typechecking.
    "allowSyntheticDefaultImports": true,
    // Enables emit interoperability between CommonJS and ES Modules
    // via creation of namespace objects for all imports.
    // Implies 'allowSyntheticDefaultImports'.
    "esModuleInterop": true,

    /* Advanced Options */

    // Enable to skip type checking of declaration files.
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",

    "outDir": "./dist"
  },
  "include": ["./**/*.ts"]
}
